

<div class="bg-warning">
<div class="text-center">
<h1>Eat Da Burger!</h1>
</div>

<div class="container bg-warning">
<div class="row">
<div class="col">

<h2>Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{burger_name}}
    </li>
       <button class="eatburger" data-id="{{this.id}}">DEVOUR IT!</button>
    {{/unless}}
  {{/each}}
</ul>
</div>


<div class="col"></div>
<div class="col">
<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
          {{burger_name}}
    </li>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
</div>

<div class="text-center"
   <p> 
    <img src ="/assets/img/burger.png"
         alt = "burger icon" />
  </p>
</div>

<div class="text-center">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="newburger" name="name">
  </div>

  

  <button type="submit">Add Burger</button>
</form>
</div>
</div>